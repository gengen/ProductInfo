<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.g_okuyama.productinfo.lite"
      android:versionCode="8"
      android:versionName="2.1">
    <application android:icon="@drawable/productinfo" 
    			android:label="@string/app_name"
    			android:theme="@android:style/Theme.Light">
        <activity android:name="ProductInfo"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
        	android:name="org.g_okuyama.productinfo.lite.ProductReview"
        	android:screenOrientation="landscape">
        </activity>
        <activity 
        	android:name="org.g_okuyama.productinfo.lite.WebReview"
        	android:screenOrientation="landscape">
        </activity>
        <activity 
        	android:name="org.g_okuyama.productinfo.lite.WebDetail"
        	android:screenOrientation="landscape">
        </activity>
   		<activity android:name="ProductInfoPreference"
			android:screenOrientation="landscape">
		</activity>
    </application>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-sdk android:minSdkVersion="4"></uses-sdk>
</manifest> 